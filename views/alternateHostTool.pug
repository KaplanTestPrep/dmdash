extends layout


block content
    .col-lg-12.col-md-12
        .card
            form.form-horizontal
                .card-header
                    h4.card-title
                        | Add Co-Hosts to Zoom Meetings
                .card-content
                    .form-group
                        label.col-md-3.control-label Co-Host Email
                        .col-md-9
                            input.form-control(type="text", value='LiveOnlineService@kaplan.com, loltech@kaplan.com', disabled)
                    .form-group
                        label.col-md-3.control-label Email
                        .col-md-9
                            textarea.form-control(rows="8", placeholder='Paste a list of comma or return separated emails')
                    .card-footer
                    .form-group
                        label.col-md-3
                        .col-md-9
                            button.btn.btn-fill.btn-info#addCoHosts(type='submit') Add Co-Hosts
