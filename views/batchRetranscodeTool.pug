extends layout

include mixins/_progressBar
include mixins/_bcAccountPicker
include mixins/_bcRefTypeRadio
include mixins/_bcVideoTextbox

block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#batchRetranscodeForm
                    .card-header
                        h4.card-title
                            | Brightcove Batch Retranscode
                    .card-content
                        +bcAccountPicker(bcAccounts)
                        +videoTextbox()
                        +refTypeRadio()
                        .form-group
                            label.col-md-3.control-label Select Rendition Profile:
                            .col-md-3
                                .btn-group.bootstrap-select
                                    select.selectpicker#bcRenditionProfile
                                        each rend in bcRenditions
                                            option(value=rend)=rend
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default#batchRetranscodeBtn(type='submit') Start Batch Retranscode
    +progressBar()

