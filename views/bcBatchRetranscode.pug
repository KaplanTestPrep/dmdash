extends layout


block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal
                    .card-header
                        h4.card-title
                            | Brightcove Batch Retranscode
                    .card-content
                        .form-group
                            label.col-md-3.control-label Select BC Account:
                            .col-md-3
                                .btn-group.bootstrap-select
                                    select.selectpicker#acccount
                                        each acc in bcAccounts
                                            option(value=acc.id)=acc.name
                        .form-group
                            label.col-md-3.control-label Videos Updated After:
                            .col-md-3
                                textarea.form-control.datepicker#datepicker(placeholder='List to Retranscode', rows='5')
                        .form-group
                            label.col-md-3.control-label Type :
                            .col-md-3
                                .radio
                                    input.form-control(type="radio", name="listType", value="refId", id="listByRefID")
                                    label(for='refid')
                                        | RefID
                                .radio
                                    input.form-control(type="radio", name="listType", value="id", id="listById")
                                    label(for='id')
                                        | ID
                        .form-group
                            label.col-md-3.control-label Select BC Account:
                            .col-md-3
                                .btn-group.bootstrap-select
                                    select.selectpicker#bcRenditionType
                                        each acc in bcRenditions
                                            option(value=acc.id)=acc.name
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-info#videoRenditions(type='submit') Get Renditions