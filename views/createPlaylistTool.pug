extends layout

include mixins/_progressBar
include mixins/_bcAccountPicker
include mixins/_bcRefTypeRadio

block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#createPlaylistForm
                    .card-header
                        h4.card-title
                            | Create Brightcove Playlist
                    .card-content
                        +bcAccountPicker(bcAccounts, "bcAccountSource")
                        .form-group
                            label.col-md-3.control-label Select CSV file to upload:
                            .col-md-3
                                input.btn.btn-default#selectCSV(type="file" name="csv" accept="text/csv" required)
                        +refTypeRadio()
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default#createPlaylistFormBtn(type="submit") Create Playlist
                                span#status
    +progressBar()
    script(src='/js/papaparse.min.js')

