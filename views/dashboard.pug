extends layout

block content
  .container-fluid
    .row
      .col-lg-3.col-sm-6
        .card
          .card-content
            .row
              .col-xs-5
                .icon-big.icon-warning.text-center
                  i.ti-user
              .col-xs-7
                .numbers
                  p Participants
                  | #{dailyReport.participants}
          .card-footer
            hr
            .stats
              i.ti-reload
              |  Updated now
      .col-lg-3.col-sm-6
        .card
          .card-content
            .row
              .col-xs-5
                .icon-big.icon-success.text-center
                  i.ti-time
              .col-xs-7
                .numbers
                  p Meeting Minutes
                  | #{dailyReport.meeting_minutes}
          .card-footer
            hr
            .stats
              i.ti-calendar
              |  Last day
      .col-lg-3.col-sm-6
        .card
          .card-content
            .row
              .col-xs-5
                .icon-big.icon-danger.text-center
                  i.ti-calendar
              .col-xs-7
                .numbers
                  p Meetings
                  | #{dailyReport.meetings}
          .card-footer
            hr
            .stats
              i.ti-timer
              |  In the last hour
      .col-lg-3.col-sm-6
        .card
          .card-content
            .row
              .col-xs-5
                .icon-big.icon-info.text-center
                  i.ti-user
              .col-xs-7
                .numbers
                  p New Users
                  | + #{dailyReport.new_users}
          .card-footer
            hr
            .stats
              i.ti-reload
              |  Updated now