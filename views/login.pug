    .wrapper.wprapper-full-page
      div.full-page.login-page
        .content
          .container
            .row
              .col-md-4.col-sm-6.col-md-offset-4.col-sm-offset-3
                form(action="")
                  .card
                    .card-header
                      h3.card-title= title
                    .card-content
                      h5 Please login with your Kaplan Google Email by clicking below.
                    .card-footer
                      a.btn.btn-fill.btn-wd.btn-danger(href='/auth/google')
                        | Sign In with Google
          block messages
            if locals.flashes
              pre= h.dump(locals.flashes)
        footer.footer.footer-transparent
