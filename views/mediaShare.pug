extends layout


block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#mediaShareSingleForm
                    .card-header
                        h4.card-title
                            | Media Sharing Single Video
                    .form-group
                            label.col-md-3.control-label Select Source BC Account:
                            .col-md-3
                                .bootstrap-select
                                    select.selectpicker#bcAccountSource(name="bcAcccountSource")
                                        each acc in bcAccounts
                                            option(value=acc.id)=acc.name
                    .form-group
                            label.col-md-3.control-label Enter RefID or Video ID
                            .col-md-3
                                input.form-control#refId(type="text" name="refId")
                    .form-group
                            label.col-md-3.control-label Type of ID :
                            .col-md-3
                                .radio
                                    input.form-control(type="radio", name="idType", value="refId", id="listByRefID" checked)
                                    label(for='refid')
                                        | RefID
                                .radio
                                    input.form-control(type="radio", name="idType", value="id", id="listById")
                                    label(for='id')
                                        | Video ID
                    .form-group
                            label.col-md-3.control-label Select Destination BC Account:
                            .col-md-3
                                .bootstrap-select
                                    select.selectpicker#bcAccountDest(name="bcAcccountDest")
                                        each acc in bcAccounts
                                            option(value=acc.id)=acc.name
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default(type='submit') Update RefID
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#mediaShareBatchForm
                    .card-header
                        h4.card-title
                            | Media Sharing Batch
                    .card-content
                        .form-group
                            label.col-md-3.control-label Select Source BC Account:
                            .col-md-3
                                .bootstrap-select
                                    select.selectpicker#bcAccountSourceBatch(name="accountId")
                                        each acc in bcAccounts
                                            option(value=acc.id)=acc.name
                        .form-group
                                label.col-md-3.control-label Select CSV file to upload:
                                .col-md-3
                                    input.btn.btn-default#selectCSVBatch(type="file" name="csv" accept="text/csv" required)
                        .form-group
                            label.col-md-3.control-label Type of ID :
                            .col-md-3
                                .radio
                                    input.form-control(type="radio", name="idTypeBatch", value="refId", id="listByRefID" checked)
                                    label(for='refid')
                                        | RefID
                                .radio
                                    input.form-control(type="radio", name="idTypeBatch", value="id", id="listById")
                                    label(for='id')
                                        | Video ID
                        .form-group
                            label.col-md-3.control-label Select Destination BC Account:
                            .col-md-3
                                .bootstrap-select
                                    select.selectpicker#bcAccountDestBatch(name="accountId")
                                        each acc in bcAccounts
                                            option(value=acc.id)=acc.name
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default#updateRefIdBatch(type='submit') Update Batch from CSV
                                span#status
    .row
        .col-lg-12.col-md-12
            .card#resultsCard.hidden
                .card-header
                    h4.card-title#percentage
                        | Progress: 0%
                .card-content
                    .progress
                        .progress-bar.progress-bar-success(style='width: 0%')
                            span.sr-only 0% Complete (success)
                    .row
                        .col-md-3
                            ul#success
                        .col-md-3
                            ul#fail

