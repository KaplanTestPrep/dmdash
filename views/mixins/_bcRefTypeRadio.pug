mixin refTypeRadio(inputName="refType")
    .form-group
        label.col-md-3.control-label Type of ID :
        .col-md-3
            .radio
                input.form-control(type="radio", name=inputName, value="refId", id="listByRefID" checked)
                label(for='refid')
                    | RefID
            .radio
                input.form-control(type="radio", name=inputName, value="id", id="listById")
                label(for='id')
                    | Video ID