      .col-lg-8.col-md-7
        .card
          .card-header
            h4.card-title Edit Profile
          .card-content
            form
              .row
                .col-md-5
                  .form-group
                    label Company
                    input.form-control.border-input(type='text', disabled='', placeholder='Company', value='DM Inc.')
                .col-md-3
                  .form-group
                    label Username
                    input.form-control.border-input(type='text', placeholder='Username', value='')
                .col-md-4
                  .form-group
                    label(for='exampleInputEmail1') Email address
                    input.form-control.border-input(type='email', placeholder='Email' value=user.email)
              .row
                .col-md-6
                  .form-group
                    label First Name
                    - firstName = user.name.split(" ")[0];
                    input.form-control.border-input(type='text', placeholder='First Name', value=firstName)
                .col-md-6
                  .form-group
                    label Last Name
                    - lastName = user.name.split(" ")[1];
                    input.form-control.border-input(type='text', placeholder='Last Name', value=lastName)
              .row
                .col-md-12
                  .form-group
                    label About Me
                    textarea.form-control.border-input(rows='5', placeholder='Here can be your description', value='Mike')
