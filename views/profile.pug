block content
  .container-fluid
    .row
      .col-lg-4.col-md-5
        .card.card-user
          .image
            img(src=user.picture, alt='...')
          .card-content
            .author
              img.avatar.border-white(src=user.picture, alt='...')
              h4.card-title
                | #{user.name}
                br
                a(href='#')
                  small #{user.email}
