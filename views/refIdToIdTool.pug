extends layout

include mixins/_progressBar
include mixins/_bcAccountPicker
include mixins/_bcRefTypeRadio
include mixins/_bcVideoTextbox

block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#refIdtoId
                    .card-header
                        h4.card-title
                            | Get Video Id from RefId
                    .card-content
                        +bcAccountPicker(bcAccounts, "bcAccountSource")
                        +videoTextbox()
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default(type='submit') Get Video IDs
                                span#status
    +progressBar()

