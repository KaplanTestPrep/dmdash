extends layout

include mixins/_progressBar
include mixins/_bcAccountPicker
include mixins/_bcRefTypeRadio
include mixins/_bcVideoTextbox

block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#removeTextTrackForm
                    .card-header
                        h4.card-title
                            | Remove Text Tracks (VTT)
                    .card-content
                        +bcAccountPicker(bcAccounts)
                        +videoTextbox()
                        +refTypeRadio()
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default#removeTextTracksBtn(type="submit") Update Metadata
                                span#status
    +progressBar()

