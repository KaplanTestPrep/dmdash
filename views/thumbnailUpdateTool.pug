extends layout


block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#thumbnailUploadForm(action="/bcThumbnailUpload" method="POST" enctype="multipart/form-data")
                    .card-header
                        h4.card-title
                            | Step 1: Uplaod Thumbnail
                    .card-content
                        .form-group
                                label.col-md-3.control-label Select Image to Upload:
                                .col-md-3
                                    input.btn.btn-default#selectThumbnail(type="file" name="thumbnail" accept="image/gif, image/png, image/jpeg")
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default#updateThumbnails(type='submit') Upload Thumbnail Image
                                span#status
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal#thumbnailUpdateForm
                    .card-header
                        h4.card-title
                            | Step 2: Update Thumbnail
                    .card-content
                        .form-group
                            label.col-md-3.control-label Uploaded Image
                            .col-md-3
                                input.form-control#uploadedImage(type="text" disabled)
                        .form-group
                            label.col-md-3.control-label Select BC Account:
                            .col-md-3
                                .bootstrap-select
                                    select.selectpicker#bcAcccount
                                        each acc in bcAccounts
                                            option(value=acc.id)=acc.name
                        .form-group
                            label.col-md-3.control-label Videos to be updated:
                            .col-md-3
                                textarea.form-control.datepicker#vidoesToUpdate(placeholder='List to Retranscode', rows='5' required)
                        .form-group
                            label.col-md-3.control-label Type of ID :
                            .col-md-3
                                .radio
                                    input.form-control(type="radio", name="refType", value="refId", id="listByRefID" checked)
                                    label(for='refid')
                                        | RefID
                                .radio
                                    input.form-control(type="radio", name="refType", value="id", id="listById")
                                    label(for='id')
                                        | ID
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-default#updateThumbnails(type='submit') Update Thumbnails
    .row
        .col-lg-12.col-md-12
            .card#resultsCard.hidden
                .card-header
                    h4.card-title#percentage
                        | Progress: 0%
                .card-content
                    .progress
                        .progress-bar.progress-bar-success(style='width: 0%')
                            span.sr-only 0% Complete (success)
                    .row
                        .col-md-3
                            ul#success
                        .col-md-3
                            ul#fail

