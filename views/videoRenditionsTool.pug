extends layout


block content
    .row
        .col-lg-12.col-md-12
            .card
                form.form-horizontal
                    .card-header
                        h4.card-title
                            | Brightcove Video Renditions List
                    .card-content
                        .form-group
                            label.col-md-3.control-label Select BC Account:
                            .col-md-3
                                .btn-group.bootstrap-select
                                    select.selectpicker#acccount
                                        each acc in bcAccounts
                                            option(value=acc.id)=acc.name
                        .form-group
                            label.col-md-3.control-label Videos Updated After:
                            .col-md-3
                                input.form-control.datepicker#datepicker(type='text', placeholder='Date Picker Here')
                    .card-footer
                        .form-group
                            label.col-md-3
                            .col-md-9
                                button.btn.btn-fill.btn-info#videoRenditions(type='submit') Get Renditions
    .row
        .col-lg-12.col-md-12
            .card#resultsCard.hidden
                .card-content
                    .fresh-datatables
                        table#renditionsTable.table.table-striped.table-no-bordered.table-hover
                            thead
                                tr
                                    th Video ID
                                    th Account ID
                                    th Reference ID
                                    th Video Name 
                                    th Description 
                                    th State 
                                    th Created At 
                                    th Updated At
                                    th Published At
                                    th Duration 
                                    th Folder ID
                                    th Digital Master ID
                                    th Tags 
                                    th Text Track ID 
                                    th Text Track Src 
                                    th Text Track Lang
                                    th Text Track Label
                                    th Text Track Kind 
                                    th Renditions 
                                    th Renditions Count
                            tfoot
                                tr
                                    th Video ID
                                    th Account ID
                                    th Reference ID
                                    th Video Name 
                                    th Description 
                                    th State 
                                    th Created At 
                                    th Updated At
                                    th Published At
                                    th Duration 
                                    th Folder ID
                                    th Digital Master ID
                                    th Tags 
                                    th Text Track ID 
                                    th Text Track Src 
                                    th Text Track Lang
                                    th Text Track Label
                                    th Text Track Kind 
                                    th Renditions 
                                    th Renditions Count